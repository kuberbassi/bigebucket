# ========================================
# Server Configuration
# ========================================
PORT=8080
NODE_ENV=development

# ========================================
# Database Configuration
# ========================================
# For local development, use:
MONGODB_URI=mongodb://127.0.0.1:27017/BigebucketDB
# For production, use MongoDB Atlas or other cloud provider

# ========================================
# JWT Secrets
# ========================================
# Generate secure random strings for production
SECRET_KEY_ACCESS_TOKEN=your_access_token_secret_here
SECRET_KEY_REFRESH_TOKEN=your_refresh_token_secret_here

# ========================================
# Frontend URL
# ========================================
# Development
FRONTEND_URL=http://localhost:5173
# Production
# FRONTEND_URL=https://yourdomain.com

# ========================================
# Cloudinary Configuration
# ========================================
# Sign up at https://cloudinary.com
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# ========================================
# Email Configuration (Resend)
# ========================================
# Sign up at https://resend.com
RESEND_API=your_resend_api_key

# ========================================
# Payment Gateway - CCAvenue
# ========================================
CCAV_MERCHANT_ID=your_merchant_id
CCAV_ACCESS_CODE=your_access_code
CCAV_WORKING_KEY=your_working_key
# Set to 'true' for testing with CCAvenue test gateway
CCAV_USE_TEST_ENDPOINT=true

# ========================================
# Stripe (Optional)
# ========================================
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_SECRET_KEY_HERE

# ========================================
# Backend URL (Optional)
# ========================================
# Used for runtime configuration
BACKEND_URL=http://localhost:8080
