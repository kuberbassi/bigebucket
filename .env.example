# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=8080
NODE_ENV=production

# MongoDB Configuration
# Get your MongoDB Atlas connection string from: https://cloud.mongodb.com
# Format: mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net/?appName=bigebucket

# Frontend URL
# For local development: http://localhost:8080
# For production: https://yourdomain.com
FRONTEND_URL=https://bigebucket.com

# JWT Secrets (Generate random strings for production)
# You can use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SECRET_KEY_ACCESS_TOKEN=your_access_token_secret_here
SECRET_KEY_REFRESH_TOKEN=your_refresh_token_secret_here

# Cloudinary Configuration (for image uploads)
# Get credentials from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Payment Gateway (Optional)
# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key

# Email Service (Optional)
# Resend API Key
RESEND_API_KEY=your_resend_api_key

# CCAvenue Payment Gateway (Optional)
CCAVENUE_MERCHANT_ID=your_merchant_id
CCAVENUE_ACCESS_CODE=your_access_code
CCAVENUE_WORKING_KEY=your_working_key
